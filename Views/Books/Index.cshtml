@model IEnumerable<LibraryApi.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddBook">Create New</a>
</p>
<p>
    Введите наименование(часть наименования) книги
</p>
<form method="post" asp-action="BookSearch">
    <p>
        <input type="text" name="name" />
    </p>
    <p>
        <input type="submit" value="Искать вхождения" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Author
            </th>
            <th>
                Release Date
            </th>
            <th>
                Count
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.ReleaseDate
            </td>
            <td>
                @item.Count
            </td>
            <td>
                <a asp-action="GiveBook" asp-route-id="@item.Id">Give Book for reader</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteBook" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
